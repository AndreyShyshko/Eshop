<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <container name="customer_account_dashboard_content" htmlTag="div" htmlClass="block-dashboard-content"/>
        <move element="customer_account_dashboard_content" destination="content"/>
        <move element="customer_account_dashboard_top" destination="customer_account_dashboard_content" before="-"/>
        <move element="customer_account_dashboard_info" destination="customer_account_dashboard_content"/>
        <move element="customer_account_dashboard_address" destination="customer_account_dashboard_content"/>
    </body>
</page>
